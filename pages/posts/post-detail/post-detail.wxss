.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 150rpx;
  left: 324rpx;
  opacity: 0.6;
}

.author-date {
  display: flex;
  align-items: center;
  margin: 20rpx 0 30rpx 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-right: 20rpx;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.tool {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 90rpx;
  margin: 20rpx 0;
}

.circle-img {
  position: absolute;
  right: 40rpx;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  height: 1px;
  width: 660rpx;
  background-color: #e5e5e5;
  margin: 0 auto;
  z-index: -100;
}

.detail {
  line-height: 44rpx;
   font-size: 24rpx; 
  letter-spacing: 2px;
    margin: 0 30rpx;      
}
