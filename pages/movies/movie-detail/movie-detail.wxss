@import "../stars/stars-template.wxss";

.container {
  font-size: 24rpx;
}

.head-img {
  width: 100%;
  height: 320rpx;
  position: absolute;
  z-index: -100;
  filter: blur(20px);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
}

.like {
  font-size: 20rpx;
  margin-top: 30rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.summary {
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
  border-bottom: 1px solid #d9d9d9;
  padding-bottom: 45rpx;
}

.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  margin-bottom: 10rpx;
  display: flex;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.synopsis {
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid #d9d9d9;
  padding-bottom: 45rpx;
}

.synopsis-font {
  color: #999;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

.casts {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 50rpx;
}

.cast-font {
  color: #999;
  margin-bottom: 40rpx;
}

.cast-imgs {
  /* display: flex; scroll-view下flex失效 */
  white-space: nowrap;
}

.cast-container {
   /* display: flex; */
  flex-direction: column; 
  display: inline-flex;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}
